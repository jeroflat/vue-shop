{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "api": ["./src/api/api.ts"]
    },
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "types": ["@types/node"]
  },
  "exclude": ["node_modules", "**/__tests__/**/*", "**/__mocks__/**/*", "**/dist/**/*"]
}
